<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oneworldinc.android.patientrecruit.ResultActivity">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#999"
            android:text=""
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>


    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <Button
         android:background="#ff3bff57"
         android:id="@+id/button_PatientisQualified"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
        android:gravity="center"
         android:text="Patient is Qualified"
         android:textStyle="bold"
         android:textSize="16dp"
         android:padding="10dp"
         android:textAllCaps="false"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true" />
 </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="50dp"
        android:layout_weight="80">
        <EditText
            android:id="@+id/text_email"
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Patient e-mail address"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#90969696"
            android:id="@+id/button_emailSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send E-Mail Notification to This Patient"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
