<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oneworldinc.android.patientrecruit.ResultActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_PatientisQualified"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="#ff095f3c"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="Patient is Qualified"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="#90969696"
                android:gravity="center|left"
                android:text="Sally"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:background="#90969696"
                android:gravity="center|left"
                android:text="Wu"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textStyle="bold" />
        </LinearLayout>


        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:imeOptions="actionDone"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Patient e-mail address" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_emailSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:background="#ff095f3c"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="Send E-Mail Notification to This Patient"
            android:textAllCaps="false"
                   android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
